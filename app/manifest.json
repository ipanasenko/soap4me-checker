      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Soap4me Checker",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://soap4.me/",
    "https://soap4.me/",
    "storage",
    "unlimitedStorage",
    "alarms"
